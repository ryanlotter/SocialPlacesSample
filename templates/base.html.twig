<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}<link href="{{ asset('css/main.css') }}" type="text/css" rel="stylesheet" />{% endblock %}
    </head>
    <body>
      {% for message in app.flashes('notice') %}
          <div class="flash-notice">
              {{ message }}
          </div>
      {% endfor %}
      <div class='page'>
        <h1 class='header'>{% block header %}{% endblock %}</h1>
        <div id="content">
          <div id="center">
              {% block body %}{% endblock %}
          </div>
        </div>
        <div class='footer'>{% block footer %}{% endblock %}</div>
      </div>
      {% block javascripts %}<script src="{{ asset('js/main.js') }}"></script>
      <script src='https://www.google.com/recaptcha/api.js'></script>
      {% endblock %}
    </body>
</html>
